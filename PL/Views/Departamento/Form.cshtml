@model ML.Departamento
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>Formulario Departamentos</h2>
</div>
<hr />

@using (Html.BeginForm("Form", "Departamento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.IdDepartamento)

    <div class="row">

        <div class="col-md-6">
            @Html.TextBoxFor(model => model.DescDepartamento, new { @class = "form-control", onkeypress = "return validarLetras(event,'lblDescDepartamento')", @placeholder = "Nombre del departamento", @type = "text" })
            <label id="lblDescDepartamento" style="color:#ff0000"></label>
        </div>

        <div class="col-md-3">
            <input type="submit" class="btn btn-success col-md-12" value="Guardar" />
        </div>
        <div class="col-md-3">
            <a id="back" class="btn btn-danger col-md-12" href="@Url.Action("GetAll", "Departamento")">Volver</a>
        </div>

    </div>
}


@Scripts.Render("~/bundles/jquery")

<script type="text/javascript">

    function validarLetras(e, lbl) {
        var key = e.keyCode;
        if ((key >= 65 && key <= 90) || key == 8 || (key >= 97 && key <= 122)) {
            $('#' + lbl).text('');
            return true;
        }
        else {
            $('#' + lbl).text('Solo se aceptan letras');
            $('#' + lbl).css('color', 'red');

            return false;
        }
    }
</script>
